<p id="notice"><%= notice %></p>

<h1>
  Customers
  <small><%= @view ? @view.title : "All" %></small>
</h1>

<div class="list-group">
  <%= link_to "All", customers_path(view: nil), class: "list-group-item" %>
  <% Segment::View.where(model: "Customer").each do |view| %>
    <%= link_to view.title, customers_path(view: view.id), class: "list-group-item" %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
